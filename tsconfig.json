{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "baseUrl": "src",
    "typeRoots": [
      "./src/types",
      "./node_modules/@types"
    ],
    "sourceMap": true,
		"suppressImplicitAnyIndexErrors": true
  },
  "include": [
    "src/**/*"
  ],
	"exclude": [
		"./src/types",
		"node_modules"
	]
}
